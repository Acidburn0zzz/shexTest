@prefix ex: <http://a.example> .
@prefix sx: <http://shex.io/ns/shex#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://a.example/S1> a sx:Shape ;
    sx:expression [ a sx:TripleConstraint ;
            sx:predicate <http://a.example/p1> ;
            sx:valueExpr [ a sx:ShapeOr ;
                    sx:shapeExprs ( [ a sx:ShapeAnd ;
                                sx:shapeExprs ( [ a sx:NodeConstraint ;
                                            sx:nodeKind "bnode" ] [ a sx:ShapeRef ;
                                            sx:reference <http://a.example/S1> ] ) ] [ a sx:ShapeAnd ;
                                sx:shapeExprs ( [ a sx:NodeConstraint ;
                                            sx:minlength "20"^^xsd:nonNegativeInteger ] [ a sx:ShapeRef ;
                                            sx:reference <http://a.example/S1> ] ) ] ) ] ] .

[] a sx:Schema ;
    sx:shapes <http://a.example/S1> .


