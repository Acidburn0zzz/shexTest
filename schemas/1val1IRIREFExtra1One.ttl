@prefix ex: <http://a.example> .
@prefix sx: <http://shex.io/ns/shex#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://a.example/S1> a sx:Shape ;
    sx:expression [ a sx:OneOf ;
            sx:expressions ( [ a sx:TripleConstraint ;
                        sx:predicate <http://a.example/p0> ] [ a sx:EachOf ;
                        sx:expressions ( [ a sx:TripleConstraint ;
                                    sx:predicate <http://a.example/p1> ;
                                    sx:valueExpr [ a sx:NodeConstraint ;
                                            sx:value <http://a.example/o1> ] ] [ a sx:TripleConstraint ;
                                    sx:max 1 ;
                                    sx:min "0"^^xsd:nonNegativeInteger ;
                                    sx:predicate <http://a.example/p2> ] ) ] ) ] ;
    sx:extra <http://a.example/p1> .

[] a sx:Schema ;
    sx:shapes <http://a.example/S1> .


